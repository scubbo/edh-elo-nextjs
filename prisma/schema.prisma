generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Player {
  id    String @id
  name  String
  decks Deck[]
}

model Deck {
  id          String  @id
  name        String
  owner       Player  @relation(fields: [ownerId], references: [id])
  ownerId     String
  elo         Int     @default(1500)
  wins        Int     @default(0)
  losses      Int     @default(0)
  gamesPlayed Int     @default(0)
  winRate     Float?

  @@index([ownerId])
}
